sayi1 = int(input('1.sayı: '))
sayi2 = int(input('2.sayı: '))

sayilar_toplami = sayi1 + sayi2
print(sayilar_toplami)

sayilar_farki = sayi1 - sayi2
print(sayilar_farki)

sayilar_carpimi = sayi1 * sayi2
print(sayilar_carpimi)

sayilar_bolumu = sayi1 / sayi2
print(sayilar_bolumu)

sayilar_tam_bolme = sayi1 // sayi2
print(sayilar_tam_bolme)

sayilar_mod = sayi1 % sayi2
print(sayilar_mod)

sayilar_us = sayi1 ** sayi2
print(sayilar_us)



r = int(input('Yarıçap giriniz: '))
π = 3.14
daire_alan = π * (r ** 2)
print(daire_alan)
